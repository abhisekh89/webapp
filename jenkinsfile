pipeline{
    agent any
    environment{
	  PATH = "${PATH}:${tool name: 'maven3', type: 'maven'}/bin"
	}
    stages{
        stage('SCM Checkout'){
            steps{
                git url: 'https://github.com/abhisekh89/webapp.git',
                branch: 'master',
                credentialsId: 'github'
            }
        }

        stage('Maven Build'){
            steps{
                sh 'mvn clean package'
            }
        }

        stage('Deploy Dev tomcat'){
            steps{
                sshagent(['tomcat-dev']) {
                    // stop tomcat
                    sh "ssh -o StrictHostKeyChecking=yes ec2-user@13.126.130.66 /opt/tomcat8/bin/shutdown.sh"
                    // copy war file to remote tomcat
                    sh "scp target/WebApp.war ec2-user@13.126.130.66:/opt/tomcat8/webapps/"
                    // start tomcat
                    sh "ssh ec2-user@13.126.130.66 /opt/tomcat8/bin/startup.sh"
                } 
            }
        }
    }
}
